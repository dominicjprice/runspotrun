<?xml version="1.0" encoding="utf-8"?>
<ScrollView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:runspotrun="http://www.runspotrun.co.uk/dev/android"
    style="@style/default_theme"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityHome">
	
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:paddingBottom="0dp"
      android:paddingLeft="0dp"
      android:paddingRight="0dp"
      android:paddingTop="0dp"
      android:orientation="vertical">
      
    <LinearLayout 
        android:id="@+id/activity_home_logon_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/dark"
        android:alpha="0.75">

      <TextView
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:textAppearance="?android:attr/textAppearanceLarge"
          android:text="@string/activity_home_not_logged_in_text"
          android:gravity="center"
          android:textColor="@color/highlight"
          android:drawableLeft="@drawable/warning"
          android:paddingLeft="15dp"
          android:paddingRight="15dp"
          android:paddingTop="5dp"
          android:paddingBottom="5dp" />
      
      <LinearLayout 
          android:layout_width="match_parent"
          android:layout_height="2dip"
          android:background="@color/light" />
      
      <uk.ac.horizon.runspotrun.ui.view.ImageButton
          style="@style/activity_home_button"
          android:text="@string/activity_home_logon_button_text"
          android:onClick="onClickLogon"
          runspotrun:drawableLeft="activity_home_button_logon" />
      
      <LinearLayout 
          android:layout_width="match_parent"
          android:layout_height="2dip"
          android:background="@color/light" />
        
    </LinearLayout>
	
    <uk.ac.horizon.runspotrun.ui.view.ImageButton
        style="@style/activity_home_button"
        android:text="@string/activity_home_camera_button_text"
        android:alpha="0.75"
        android:onClick="onClickShowCamera"
        runspotrun:drawableLeft="activity_home_button_record" />
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="2dip"
        android:background="@color/light" />
	  
    <uk.ac.horizon.runspotrun.ui.view.ImageButton
        style="@style/activity_home_button"
        android:text="@string/activity_home_my_videos_button_text"
        android:alpha="0.75"
        android:onClick="onClickShowReview"
        runspotrun:drawableLeft="activity_home_button_review" />
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="2dip"
        android:background="@color/light" />
    
    <uk.ac.horizon.runspotrun.ui.view.ImageButton
        style="@style/activity_home_button"
        android:text="@string/activity_home_settings_button_text"
        android:alpha="0.75"
        android:onClick="onClickShowSettings"
        runspotrun:drawableLeft="activity_home_button_settings" />
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="2dip"
        android:background="@color/light" />
    
    <uk.ac.horizon.runspotrun.ui.view.ImageButton
        style="@style/activity_home_button"
        android:text="@string/activity_home_about_button_text"
        android:alpha="0.75"
        android:onClick="onClickShowAbout"
        runspotrun:drawableLeft="activity_home_button_about" />
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="2dip"
        android:background="@color/light" />
    
    <uk.ac.horizon.runspotrun.ui.view.ImageButton
        style="@style/activity_home_button"
        android:text="@string/activity_home_exit_button_text"
        android:alpha="0.75"
        android:onClick="onClickExit"
        runspotrun:drawableLeft="activity_home_button_exit" />
    	
  </LinearLayout>
	
</ScrollView>
