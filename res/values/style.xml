<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    
  <style name="default_theme" parent="@android:style/Theme.Black">
    <item name="android:background">@drawable/background</item>
  </style>
  
  <style name="activity_settings_theme" parent="@android:style/Theme.Black">        
    <item name="android:textColorPrimary">@color/activity_settings_button</item>
    <item name="android:textColorSecondary">@color/inverse_highlight</item>
  </style>
    
  <style name="activity_home_button">
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:background">@drawable/activity_home_button</item>
    <item name="android:textColor">@color/activity_home_button</item>
    <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
    <item name="android:paddingTop">5dp</item>
    <item name="android:paddingBottom">5dp</item>
    <item name="android:paddingLeft">15dp</item>
    <item name="android:paddingRight">15dp</item>
    <item name="android:gravity">right|center_vertical</item>
  </style>
  
  <style name="activity_camera_button_keypad">
    <item name="android:layout_width">75dp</item>
    <item name="android:layout_height">50dp</item>
    <item name="android:background">@drawable/activity_camera_button_keypad</item>
    <item name="android:textColor">@color/activity_camera_button</item>
    <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
  </style>
    
</resources>
