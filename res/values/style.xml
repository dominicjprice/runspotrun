<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    
  <style name="default_theme" parent="@android:style/Theme.Black">
    <item name="android:background">@drawable/background</item>
  </style>
  
  <style name="activity_settings_theme" parent="@android:style/Theme.Black">        
    <item name="android:textColorPrimary">@color/button</item>
    <item name="android:textColorSecondary">@color/inverse_highlight</item>
  </style>
  
  <style name="button">
    <item name="android:background">@drawable/button_square_corner</item>
    <item name="android:textColor">@color/button</item>
    <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
    <item name="android:paddingTop">5dp</item>
    <item name="android:paddingBottom">5dp</item>
    <item name="android:paddingLeft">15dp</item>
    <item name="android:paddingRight">15dp</item>    
  </style>
    
  <style name="activity_home_button" parent="@style/button">
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:gravity">right|center_vertical</item>
  </style>
  
  <style name="activity_launch_button" parent="@style/button">
    <item name="android:layout_width">0dp</item>
    <item name="android:layout_height">fill_parent</item>
    <item name="android:layout_weight">0.5</item>
    <item name="android:gravity">center</item>
  </style>
  
  <style name="activity_about_button" parent="@style/button">
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">fill_parent</item>
    <item name="android:gravity">center</item>
  </style>
  
  <style name="activity_logon_button" parent="@style/button">
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">fill_parent</item>
    <item name="android:gravity">center</item>
  </style>
  
  <style name="activity_review_button" parent="@style/button">
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">fill_parent</item>
    <item name="android:gravity">center</item>
  </style>
  
  <style name="activity_settings_button" parent="@style/button">
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">fill_parent</item>
    <item name="android:gravity">center</item>
  </style>
  
  <style name="activity_camera_button_keypad" parent="@style/button">
    <item name="android:layout_width">75dp</item>
    <item name="android:layout_height">50dp</item>
  </style>
  
  <style name="settings_dialog">
    <item name="android:background">@color/dark</item>
    <item name="android:textColor">@color/highlight</item>
    <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:minHeight">53dip</item>
    <item name="android:paddingTop">9dip</item>
    <item name="android:paddingBottom">9dip</item>
    <item name="android:paddingLeft">10dip</item>
    <item name="android:paddingRight">10dip</item>
  </style>
      
</resources>
